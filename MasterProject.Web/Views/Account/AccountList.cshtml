@{
    ViewBag.Title = "Lista pracowników";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    <script>
        $(document).ready(function() {
            getAccountList();
        });

        function getAccountList() {
            $('#accountlist').DataTable().destroy();
            var oTable = $('#accountlist').DataTable({
                "bServerSide": true,
                "bProcessing": true,
                "ajax": {
                    url: '@Url.Action("AccountListDataTable", "Account")',
                    type: 'POST'
                },
                paging: true,
                searching: false,
                ordering: true,
                bAutoWidth: false,
                "pageLength": 25,
                "order": [[0, "desc"]],
                "columnDefs": [
                    { "width": "5%", "targets": 0 },
                    { "width": "10%", "targets": 1 },
                    { "width": "15%", "targets": 2 },
                    { "width": "15%", "targets": 3 },
                    { "width": "30%", "targets": 4 },
                    { "width": "15%", "targets": 5 },
                    { "width": "10%", "targets": 6, "orderable": false }
                ],
                "columns": [
                    { "data": "Id" },
                    { "data": "RoleName" },
                    { "data": "Name" },
                    { "data": "Surname" },
                    { "data": "WardName" },
                    { "data": "PhoneNumber" },
//TODO Dodać edycję
                    {
                        "data": "Id",
                        render: (data) => {
                            var url = 'edytuj-newsa/' + data;
                            var element =
                                '<a class="btn btn-xs btn-blue text-uppercase text-strong text-sm mr-5" href="' +
                                    url +
                                    '"> Edytuj newsa </a>';
                            return element;
                        }
                    }
                ],
                "dom": 'Rlfrtip',
                "bDestroy": true,
                "iDisplayLength": 25,
                "lengthMenu": [[10, 25, 50, 100, 250], [10, 25, 50, 100, 250]]
            });
        }
    </script>
}

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
    <div class="container">
        <table id="accountlist" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Rola</th>
                    <th>Imię</th>
                    <th>Nazwisko</th>
                    <th>Oddział</th>
                    <th>Telefon</th>
                    <th>Podgląd konta</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>ID</th>
                    <th>Rola</th>
                    <th>Imię</th>
                    <th>Nazwisko</th>
                    <th>Oddział</th>
                    <th>Telefon</th>
                    <th>Podgląd konta</th>
                </tr>
            </tfoot>
        </table>
    </div>
</main>